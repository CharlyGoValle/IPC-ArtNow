<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#8E9298">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar" />

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="384dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="1dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Seleccionar filtros:" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:addStatesFromChildren="false"
            android:contentDescription="@string/app_name"
            android:focusable="auto"
            android:labelFor="@id/textView"
            android:minHeight="48dp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:addStatesFromChildren="false"
            android:contentDescription="@string/app_name"
            android:focusable="auto"
            android:labelFor="@id/textView"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:backgroundTint="#3F51B5"
            android:text="Ver cuadros" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Resultados:"
            android:textColor="#3F51B5"
            android:textSize="16sp" />

    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/CardEntregaT"
        android:layout_width="380dp"
        android:layout_height="120dp"
        android:layout_gravity="center|center_vertical"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#DADDF1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7"
        app:layout_constraintVertical_bias="0.119"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="10dp">


        <TextView
            android:id="@+id/txtNameStore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginStart="40dp"
            android:text="Las meninas"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtLocation"
            android:layout_width="230dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginStart="60dp"
            android:text="Diego Velazquez/Barroco " />

        <TextView
            android:id="@+id/txtLocation3"
            android:layout_width="230dp"
            android:layout_height="36dp"
            android:layout_gravity="bottom|center"
            android:layout_marginStart="60dp"
            android:text="300.00$" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="123dp"
            android:layout_height="match_parent"
            card_view:srcCompat="@drawable/meninas" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/CardMaja"
        android:layout_width="380dp"
        android:layout_height="120dp"
        android:layout_gravity="center|center_vertical"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#DADDF1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CardEntregaT"
        app:layout_constraintVertical_bias="0.164"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="10dp">


        <TextView
            android:id="@+id/txtN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginStart="40dp"
            android:text="La maja vestida"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtL"
            android:layout_width="230dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginStart="60dp"
            android:text="Francisco Goya/Romance " />

        <TextView
            android:id="@+id/txtLoc"
            android:layout_width="230dp"
            android:layout_height="36dp"
            android:layout_gravity="bottom|center"
            android:layout_marginStart="60dp"
            android:text="350.00$" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            card_view:srcCompat="@drawable/maja" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E4E4E4"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/imageViewMBC"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/cart_blue" />

        <ImageView
            android:id="@+id/imageViewMBH"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/home" />

        <ImageView
            android:id="@+id/imageViewMBS"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/picture" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>